<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--.___ shared attributes __.-->

    <attr name="colorDark" format="color"/>
    <attr name="colorLight" format="color"/>

    <!--.___ styleable's __.-->

    <declare-styleable name="CustomMaterialButton">
        <attr name="colorDark"/>
        <attr name="colorLight"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="colorDark"/>
        <attr name="colorLight"/>
    </declare-styleable>

    <declare-styleable name="CircularColorButtonChanger">
        <attr name="firstButtonText" format="string"/>
        <attr name="secondButtonText" format="string"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="firstButtonColorDark" format="color"/>
        <attr name="firstButtonColorLight" format="color"/>
        <attr name="secondButtonColorDark" format="color"/>
        <attr name="secondButtonColorLight" format="color"/>
    </declare-styleable>

</resources>
    <!--.___ End of attrs __.-->

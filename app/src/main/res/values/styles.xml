<resources>

    <!--.___ Base application theme __.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--.___ Button theme __.-->

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="colorDark">@color/colorPrimaryDark</item>
        <item name="colorLight">@color/colorPrimary</item>
    </style>

    <style name="ButtonAccent">
        <item name="android:textColor">@color/white</item>
        <item name="colorDark">@color/colorAccentDark</item>
        <item name="colorLight">@color/colorAccent</item>
    </style>

    <style name="ButtonMaterialPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="colorDark">@color/colorPrimaryDark</item>
        <item name="colorLight">@color/colorPrimary</item>
    </style>

</resources>
<!--.___ End of styles __.-->
